{
  "manifest_version": 2,

  "name": "WeScribe",
  "description": "This extension tracks user usage.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "chrome_url_overrides" : {
    "newtab": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],


    "content_scripts": [
        {
        "matches": [
            "https://www.netflix.com/*"
            ],
        "js": ["content.js"],
        "run_at": "document_start"         // pay attention to this line
        }
    ],

  "background": {
    "scripts": ["background.js"]
  }

}
